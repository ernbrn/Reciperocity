<body class="fonts">
<div class="large-6 large-centered columns">
  <%= form_tag({controller: "recipes", action: "add_to_potluck"}, method: "post") do %>


    <div class="field">
      <%if current_user.potlucks.any?%>
    <%= label :potluck_ids, "Potluck" %><br>
    <%= collection_select @potlucks, :potluck_id, current_user.potlucks, :id, :name %>
<div class="action">
        <%= submit_tag "Add!", class: "tiny button radius" %>
      </div>
  <%else%>
    You don't have any potlucks
  <%end%>
</div>



      <%end%>
