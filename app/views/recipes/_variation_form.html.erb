  <div class="row">


<body class="fonts">
<div class="large-6 large-centered columns">
  <%= form_for @new_recipe, :url => {:controller => 'recipes', :action => 'clone_save'} do |f| %>

      <div class="field">
        <%= f.label :dish_name %>
        <%= f.text_field :dish_name %>
      </div>

      <%= f.fields_for :ingredients do |ingredient| %>
          <%= render 'recipes/ingredient_fields', :f => ingredient %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association content_tag(:i, ' ingredient', class: "fa fa-plus"), f, :ingredients %>
      </div>
      <div class="field">
        <%= f.label :instructions%>
        <%= f.text_area :instructions, placeholder: "Put each step on its own line" %>
      </div>

      <div class="field">
        <%= f.label :prep_time %>
        <%= f.text_field :prep_time %>
      </div>

      <div class="field">
        <%= f.label :cook_time %>
        <%= f.text_field :cook_time %>
      </div>

      <div class="field">
        <%= f.label :yield %>
        <%= f.text_field :yield %>
      </div>

      <div class="field">
        <%= f.label :tag_list, "Tags" %>
        <%= f.text_field :tag_list %>
      </div>

      <div class="field">
        <%= f.label :picture %>
        <%= f.file_field :picture %>
      </div>

      <div class="action">
        <%= f.submit "Make Recipe", class: "tiny button radius" %>
      </div>
      </div>

  <% end %>
 </div>
</div>
