<body class="fonts">
<div class="large-6 large-centered columns">
  <%= form_for(@recipe) do |f| %>
      <% if @recipe.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

            <ul>
              <% recipe.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="field">
        <%= f.label :dish_name %>
        <%= f.text_field :dish_name %>
      </div>

      <%= f.fields_for :ingredients do |ingredient| %>
          <%= render 'ingredient_fields', :f => ingredient %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association content_tag(:i, ' ingredient', class: "fa fa-plus"), f, :ingredients %>
      </div>
      <div class="field">
        <%= f.label :instructions%>
        <%= f.text_area :instructions, placeholder: "Put each step on it's own line" %>
      </div>

      <div class="field">
        <%= f.label :prep_time %>
        <%= f.text_field :prep_time %>
      </div>

      <div class="field">
        <%= f.label :cook_time %>
        <%= f.text_field :cook_time %>
      </div>

      <div class="field">
        <%= f.label :yield %>
        <%= f.text_field :yield %>
      </div>

      <div class="field">
        <%= f.label :tag_list, "Tags" %>
        <%= f.text_field :tag_list %>
      </div>

      <div class="field">
        <%= f.label :picture %>
        <%= f.file_field :picture %>
      </div>

      <div class="action">
        <%= f.submit "Make Recipe", class: "button" %>
      </div>
      </div>

  <% end %>
  </body>
